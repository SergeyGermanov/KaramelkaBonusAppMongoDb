<%- include('partials/header')%>

<script>
  $(document).ready(function () {
    $(".autumn").on("click", function () {
      $(this)
        .closest(".content")
        .parent()
        .find(".relaxed")
        .transition("fade up");
    });
    $(".ui.accordion").accordion();
  });
</script>

<div class="ui container">
  <div class="ui warning form segment">
    <a href="/" class="ui orange ribbon label"><i class="home icon"></i></a>
    <div class="ui warning huge message">
      <div class="header">Список клиентов!</div>
    </div>

    <div class="ui styled fluid accordion">
      <%list.forEach((list) => {%>

      <div class="title">
        <i class="dropdown icon"></i>
        <%= list.name%>
      </div>
      <div class="content">
        <p class="transition hidden">
          <strong>Номер телефона:</strong> +<%= list.phone%>
        </p>
        <p class="transition hidden">
          <strong>Количество бонусов:</strong> <%= list.bonus%> баллов
        </p>
        <p class="transition hidden">
          <strong>Бонус равен:</strong> 1 Бонус = <%= list.bonusIndex%> рублям
        </p>
        <p class="transition hidden">
          <strong>Процент списания:</strong> <%= list.percent%>%
        </p>

        <p class="transition hidden">
          <strong>Потрачено в салоне:</strong> <%= list.money%> рублей
        </p>
        <button class="autumn">pop up</button>

        <div class="ui relaxed divided list">
          <div class="item">
            <i class="large github middle aligned icon"></i>
            <div class="content">
              <a class="header"><%= list.transactions[0].date%></a>
              <div class="description">
                Бонусы: <%= list.transactions[0].bonus%>
              </div>
              <div class="description">
                Потрачено денег: <%= list.transactions[0].money%>
              </div>
            </div>
          </div>
          <div class="item">
            <i class="large github middle aligned icon"></i>
            <div class="content">
              <a class="header"><%= list.transactions[0].date%></a>
              <div class="description">
                Бонусы: <%= list.transactions[0].bonus%>
              </div>
              <div class="description">
                Потрачено денег: <%= list.transactions[0].money%>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%})%>
    </div>
  </div>

  <%- include('partials/footer')%>
</div>
